                        <dt>
                            @Html.DisplayFor(model => model.VALUEOFPLAN)
                        </dt>
                    </dl>
                     <dl>
                        <dd>
                         Credit Points:
                        </dd>
                        <dt>
                            @Html.DisplayFor(model => model.CREDITPOINTS)
                        </dt>
                    </dl>
                       <dl>
                        <dd>
                         Validity of Plan:
                        </dd>
                        <dt>
                            @Html.DisplayFor(model => model.VALIDITY)
