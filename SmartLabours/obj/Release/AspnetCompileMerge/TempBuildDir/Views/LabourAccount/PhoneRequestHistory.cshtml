                      alert('Transaction Disbuted Successfully');
                      location.reload(true);

                  } else {
                      alert(data);

                  }
              });
              $("#divfeedback").css('display', 'none');
              $("#divDisbute").css('display', 'block');
          }
          else {
              alert("Please Enter Feedback");
          }
      }
      else {
          alert('Please Select Any One Record To Disbute ');
     
      }
  }
