    function PreviousPage() {
        window.location = '@Url.Action("Dashboard", "smart")';
    }

    $(document).ready(function () {

        $('#btnDownload').click(function (e) {         
            e.preventDefault();  //stop the browser from following
            window.location.href = '@Url.Content("~/Upload_Files/ApkFiles/android-debug.apk")';
        });

        $('#btnDownloadNew').click(function (e) {           
            e.preventDefault();  //stop the browser from following
            window.location.href = '@Url.Content("~/Upload_Files/ApkFiles/android-debugVr2.apk")';
        });
        
        $('#btnDownload09').click(function (e) {
            e.preventDefault();  //stop the browser from following
