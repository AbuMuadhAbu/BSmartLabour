                    <li><a href="/HelpDesk/HelpDeskSponsorList" title="Help Desk">Help Desk List</a></li>
                </ul>
            </div>
            <div class="right_content">
                <h2>
                    Other Participation History</h2>
                <div class="phone_history">
                    <table>
                        <tr>
                            <th class="sno">
                                S.No
                            </th>
                            <th>
                                 Participation ID    
                            </th>
                            <th>
                                 Participation Type
                            </th>
                            <th>
                                Participation
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                               Comments
                            </th>

                        </tr>
                        @{int sno = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="sno">@(sno = sno + 1)
                                </td>
                                <td>
                                    @{ 
                            string a = "", donateID = "";

                            a = Convert.ToString(item.SponsorDonateId);
                            donateID = "DONATE000".PadRight(6) + a;                         
                                    }
                                    <label>
                                        @donateID
                                    </label>
                                       </td>
                                <td> 
                                    @item.DonateType
                                </td>
                                <td>@item.DonateAmount
                                </td>

                                <td> @Html.DisplayFor(modelitem => item.CreatedDate)
                                 
                               </td>

                                <td>@item.Description
                                </td>
                                <td>@Html.DisplayFor(modelitem => item.Comments)
                                </td>
                            </tr>
                        }
                    </table>
                </div>
             
            </div>
        </div>
    </div>
