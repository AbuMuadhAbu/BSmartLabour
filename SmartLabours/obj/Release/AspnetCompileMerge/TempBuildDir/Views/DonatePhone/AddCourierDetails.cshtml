    function checkvalidation() {

       // debugger
        var AdminAccept1 = $("#IsPhoneConfirmation").val();
        //alert(AdminAccept1);
        if (AdminAccept1 == "True") {
            var status = 0;
           // alert("Hi");
           // var Editorval = CKEDITOR.instances["CourierDetail"].getData();


            if ($('#CourierDetail').val() != "") {
