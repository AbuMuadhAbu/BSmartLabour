                    <li><a href="/HelpDesk/HelpDeskSponsorList" title="Help Desk">Help Desk List</a></li>
                </ul>
            </div>
            <div class="right_content">
                <h2>
                    Donate Phone History</h2>
                <div class="phone_history">
                    <table>
                        <tr>
                            <th class="sno">
                                S.No
                            </th>
                            <th>
                                Donate ID<br>
                                    </th>
                            <th>
                                Phone
                                Details
                            </th>
                            <th>
                                IMEA<br>
                                Number
                            </th>
                            <th>
                                Phone
                                <br>
                                Color
                            </th>
                            <th>
                                Donatephone<br>
                                Date
                            </th>
                            <th>
                                Courier Name
                                <br>
                                & Details
                            </th>
                            <th>
                                Status
                            </th>
                        </tr>
                        @{int sno = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="sno">@(sno = sno + 1)
                                </td>
                                <td>
                                    @{ 
                            string a = "", donateID = "";

                            a = Convert.ToString(item.DonateID);
                            donateID = "DONATE000".PadRight(6) + a;
                            // donateID = "DONATE000".PadRight(6)+a;
                                    }
                                    <label>
                                        @donateID
                                    </label>
                                       </td>
                                <td>  @item.BrandName -
                            @item.ModelNo
                                </td>
                                <td>@item.IMEANumber
                                </td>
                                <td>@item.PhoneColor
                                </td>
                                <td>@Html.DisplayFor(modelitem => item.DonatedDate)
                                </td>
                                <td>@Html.Raw(item.CourierDetail)
                                </td>
                                <td>
                                    @if (item.IsPhoneConfirmation == false)
                                    {
                                        <label>
                                            Awaiting Labour’s Approval </label>
    
                        
                                    }
                                    else if (item.IsPhoneConfirmation == true && item.CourierDetail != null && item.IsPhoneAcceptedByAdmin == false)
                                    {
                                        <label>
                                            transit</label>
                                    }
                                    else if (item.IsPhoneConfirmation == true && item.IsPhoneAcceptedByAdmin == true && item.IsPhoneAssignedToLabour == false)
                                    {
                                        <label>
                                            Received</label>
                                    }
                                    else if (item.IsPhoneConfirmation == true && item.IsPhoneAcceptedByAdmin == true && item.IsPhoneAssignedToLabour == true)
                                    {
                                        <label>
                                            Your Phone assigned to Labour</label>
                                    }
                                    else
                                    {
                                        <label>
                                            Rejected</label>
                                    }
                                </td>
                            </tr>
                        }
                    </table>
                </div>
