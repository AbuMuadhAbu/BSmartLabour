<script type="text/javascript">
    //Send to Previous page
    function PreviousPage() {
        window.location = "/SubCategory/SubCategoryMasterList";
    }


    function Validate(e) {
        if ($('#Orgname').val() == '') {
            $('#lblOrgError').text('');
            $('#lblOrgError').text('Please Select Organization');
            (e.preventDefault) ? e.preventDefault() : e.returnValue = false;
            return false;
        }
    }

    $(document).ready(function () {

        $("#Orgname").keypress(function (e) {           
            //if (!((e.which >= 65 && e.which <= 90) || (e.which >= 97 && e.which <= 122) || e.which == 8 || e.which == 44 || e.which == 39 || e.which == 45 || e.which == 95 || e.which == 38 || e.which == 46 || (e.which >= 48 && e.which <= 57))) {
            //    e.preventDefault();
            //    return false;
            //}
            $('#lblOrgError').text('');
            //return true;

        });

        $("#Orgname").keyup(function (event) {
            if (event.keyCode == 8 || event.keyCode == 46) {
                $('#lblOrgError').text('');
            }
        });

        $("#CatrgoryName").keyup(function (event) {
            if (event.keyCode == 8 || event.keyCode == 46) {
                $('#lblCategoryError').text('');
            }
        });


        $("#CatrgoryName").keypress(function (event) {
           
            
           
            if (!AllowAlphaOnly(event)) {
                event.preventDefault();
                return false;
            }
            $('#lblCategoryError').text('');
            return true;

        });




        $("#SubCategoryName").keypress(function (event) {           
            if (!AllowAlphaOnly(event)) {
                event.preventDefault();
                return false;
            }           
            return true;

        });




        $('#CatrgoryName').autocomplete(
           {
               source: function (request, response) {
                   //  debugger
                   var str = $("#Orgname").val();
                   // var str1 = $("#OrgName").val();
                   $.ajax({
                       url: '@Url.Action("CategoryNameAutoComplete", "Category")',
                       dataType: "json",
                       cache: false,
                       type: "get",
                       data: { term: request.term, org: str }
                   }).done(function (data) {
                       //debugger
                       response(data);
                   });
               }, change: function (event, ui) {
                   if ($('#CatrgoryName').val() != '') {
                       $('#lblCategoryError').text('');
                       $.ajax({
                           url: '@Url.Action("CheckCategoryName", "Category")',
                           dataType: "json",
                           cache: false,
                           type: "get",
                           data: { Category: $('#CatrgoryName').val() },
                           success: function (data) {
                               if (data != '1') {
                                   $('#lblCategoryError').text('');
                                   $('#lblCategoryError').text(data);
                               }
                               else {
                                   $('#lblCategoryError').text('');
                               }
                           },
                           error: function (data) {
                           }
                       });
                   }
                   else {

                       $('#lblCategoryError').text('');
                   }
               }
           });


        $('#Orgname').autocomplete(
          {
              source: function (request, response) {
                  //debugger
                  $.ajax({
                      url: '@Url.Action("OrgNameAutoComplete", "OrganizationSubAdmin")',
                      dataType: "json",
                      cache: false,
                      type: "get",
                      data: { term: request.term }
                  }).done(function (data) {
                      //debugger
                      response(data);
                  });
              }, change: function (event, ui) {
                   if ($('#Orgname').val() != '') {
                       $('#lblOrgError').text('');
                      $.ajax({
                          url: '@Url.Action("CheckOrganizationName", "Organization")',
                          dataType: "json",
                          cache: false,
                          type: "get",
                          data: { OrgName: $('#Orgname').val() },
                          success: function (data) {
                              if (data != '1') {
                                  $('#lblOrgError').text('');
                                  $('#lblOrgError').text(data);
                              }
                              else {
                                  $('#lblOrgError').text('');


                                  $("#CategoryId").empty();
                                  $("#CategoryId").append('<option value="' + 0 + '">' + 'Select' + '</option>');
                                  var Orgname = $('#Orgname').val();
                                //  debugger
                                  $.ajax(
                                      {
                                          type: 'POST',
                                          url: '@Url.Action("GetCategory", "Category")',
                                          dataType: 'json',
                                          data: { Orgname: Orgname },
                                          success: function (providers) {
                                              //debugger
                                              $.each(providers, function (i, provider) {
                                                  $("#CategoryId").append('<option value="' + provider.Value + '">' + provider.Text + '</option>');
                                              });
                                          }, error: function (providers) {
                                             // debugger
                                          }
                                      });

                              }
                          },
                          error: function (data) {
                          }
                      });
                  }
                   else {
                       $('#lblOrgError').text('');
                       $('#lblOrgError').text('Please Select Organization');
                  }
              }
          });

    })
</script>

<div class="content">
    <div class="wrapper">
        <div class="continn">
            <fieldset>
                <legend></legend>
                <h3>
                  Add Sub Category
                </h3>
                <div class="clr2">
                </div>
                <div class="error_mesg" id="msShow1" >
                    <b>
                        <label id="lblErrormsg" >
                            @ViewBag.messagealert
                        </label>
                    </b>
                </div>
                <div class="suss_mesg" id="msShow2" >
                    <b>
                        <label id="lblError1" >
                        </label>
                    </b>
                </div>
                <div class="fld_fd">
                    @using (Html.BeginForm("SubCategoryAdd", "SubCategory", FormMethod.Post, new { id = "SubCategoryAdd", @class = "form-horizontal", enctype = "multipart/form-data", autocomplete = "off" }))
                    {
                        @Html.ValidationSummary(true)
                        <div>
                            <dl>
                                <dd>
                                    <span style="color:red;padding-right :2px;"> * </span>  Sub Category
                                </dd>
                                <dt>
                                    @Html.TextBoxFor(model => model.SubCategoryName, new { maxlength = 50 })
                                    <span class="error">
                                        @Html.ValidationMessageFor(model => model.SubCategoryName)
                                    </span>
                                </dt>
                            </dl>




                            <dl>
                                <dd>
                                    <span style="color:red;padding-right :2px;"> * </span>   Organization 
                                </dd>
                                <dt>
                                   @{
                                    if (HttpContext.Current.Session["USERID"].ToString() == "1")
                                    {
                            @Html.TextBoxFor(model => model.OrgName, new { maxlength = 35, id = "Orgname" })
                                  <span class="error">
                                        <label id="lblOrgError" >@ViewBag.OrgAlert</label>
                                  </span>
                                    }
                                        else 
                                        {
                                         @Html.TextBox("OrgId", (string)ViewBag.GetOrganizationName, new { id = "txtOrgName", disabled = "disabled" })
                                       }


                                    }
                                </dt>
                            </dl>




                            @*<dl>
                                <dd>
                                    <span style="color:red;padding-right :2px;"> * </span>   Category
                                </dd>
                                <dt>
                                    @Html.TextBoxFor(model => model.CategoryName, new { maxlength = 50, id = "CatrgoryName" })
                                    <span class="error">
                                        @Html.ValidationMessageFor(model => model.CategoryName)  
                                        <label id="lblCategoryError" ></label>
                                    </span>
                                </dt>
                            </dl>*@

                            <dl>
                                <dd>
                                    <span style="color:red;padding-right :2px;"> * </span>   Category
                                </dd>
                                <dt>
                                    <div class="drop-down">
                                        @Html.DropDownListFor(Model => Model.CategoryId, (SelectList)ViewBag.CategoryList, "Select", new { @class = "drop_down" })

                                    </div>
                                    <span class="error">
                                        @Html.ValidationMessageFor(model => model.CategoryName)
                                        <label id="lblCategoryError" ></label>
                                    </span>
                                </dt>
                            </dl>        

                          

                            <dl style="padding-top:7px">
                                <dd>
                                    <span style="color:red;padding-right :2px;"> * </span> Status
                                </dd>
                                <dt>
                                    @Html.RadioButtonFor(model => model.Status, true, new { @checked = true })
                                    <label>
                                        Active
                                    </label>
                                    @Html.RadioButtonFor(model => model.Status, false)
                                    <label>
                                        InActive
                                    </label>
                                </dt>
                            </dl>
                            <div class="btn1 btn1-form">
                                <input type="submit" value="Save" title="Save" onclick="Validate(this);" />
                                <input type="button" value="Back" title="Back" onclick="PreviousPage();" />
                            </div>
                        </div>

                    }
                </div>
            </fieldset>
        </div>
    </div>
</div>
