                        <dt>
                            @Html.DisplayFor(n => n.labours.Name)</dt>
                    </dl>
                    <dl>
                        <dd>
                            Status</dd>
                        <dt>
                            @{if (Model.APPROVED == true)
                              {<label>Approved</label>}
                              else
                              {<label>Not Approved</label>}}
                        </dt>
                    </dl>
