   <script type="text/javascript">

       $(document).ready(function () {
           var text = $('#USEREMAIL').val();
           var watermark = 'User Email';
           $('#USEREMAIL').blur(function () {

               if ($(this).val().length == 0) {
                   if (!$(this).hasClass(watermark))
                       $(this).val(watermark).addClass('watermark');
                   else
                       $(this).val(watermark);
                   $('#USEREMAIL').val("User Email").addClass('watermark');
               }
           }).focus(function () {
               if ($(this).val() == watermark) {
                   if ($(this).hasClass(watermark))
                       $(this).val("").removeClass('watermark');
                   else
                       $(this).val("");
               }
           });

           var watermarks = 'password';
           $('#PASSWORD').blur(function () {
               if ($(this).val().length == 0) {
                   if (!$(this).hasClass(watermark))
                       $(this).val(watermarks).addClass('watermark');
                   else
                       $(this).val(watermarks);
                   // $('#PASSWORD').val("password").addClass('watermark');;
               }
           }).focus(function () {
               if ($(this).val() == watermarks) {
                   if ($(this).hasClass(watermark))
                       $(this).val("").removeclass('watermark');
                   else
                       $(this).val("");
               }
           });

           if ($('#USEREMAIL').val() == '') {
               //   watermark = 'User Email';
               $('#USEREMAIL').val("User Email").addClass('watermark');
           }
           if ($('#PASSWORD').val() == '') {
               // watermarks = 'password';
               $('#PASSWORD').val("password").addClass('watermark');
           }
       });
    </script>

   <style type="text/css">
