<script src="../../Content/Admin/ckeditor/ckeditor.js" type="text/javascript"></script>

<script type="text/javascript">

    window.onload = function () {

        var editor = CKEDITOR.replace('FullDecription');
        editor.on('blur', function (evt) {
            document.getElementById('FullDecription').value = evt.editor.getData();
            if (document.getElementById('FullDecription').value != "") {

                $("#errorbanner").css({ display: "none" });
            }
            else {
                $("#errorbanner").css({ display: "block" });
            }
        });


    };


    function PreviousPage() {
        window.location.href = "/Cmspage/Termsandcondition_List";
    }

</script>

<div class="content">
    <div class="wrapper">
       <div class="continn">
            <fieldset>
                <legend></legend>
                <h3>
                   Terms and condition Add 
                </h3>
                <div class="clr2">
                </div>
                <div class="error_mesg" id="msShow1" >
                    <b>
                        <label id="lblErrormsg" >
                           
                        </label>
                    </b>
                </div>
                <div class="suss_mesg" id="msShow2" >
                    <b>
                        <label id="lblError1" >
                        </label>
                    </b>
                </div>
                <div class="fld_fd">
                    @using (Html.BeginForm("Termsandcondition_Add", "Cmspage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div>
                            <dl>
                                <dd>
                                    Short Description</dd><dt>
                                        @Html.TextAreaFor(model => model.ShortDescription, new { @cols = "20", @rows = "2" })
                                        <span class="error">
                                            @Html.ValidationMessageFor(model => model.ShortDescription)
                                        </span></dt>
                            </dl>
                            <dl id="idcourie">
                                <dd>
                                    Full Description</dd><dt>
                                        <div style="width: 600px; float: left; text-align: left; padding-bottom: 10px;">
                                            @Html.TextAreaFor(model => model.FullDecription)
                                            <span class="error" id="errorbanner" style="display:none;">
                                            Please Enter Description
                                                @Html.ValidationMessageFor(model => model.FullDecription)                                            </span>
                                        </div>
                                    </dt>
                            </dl>
                            
                               <dl>
                                <dd>
                                    Status</dd><dt>
                                        @Html.RadioButtonFor(model => model.STATUS, true, new { @checked = true })
                                        <label>
                                            Active</label>
                                        @Html.RadioButtonFor(model => model.STATUS, false)
                                        <label>
                                            InActive</label>
                                    </dt>
                            </dl>
                            <div class="btn1 btn1-form">
                                <input type="submit" value="Save" title="Save" />
                                <input type="button" value="Back" title="Back" onclick="PreviousPage();" />
                            </div>
                        </div>
    
                    }
                </div>
            </fieldset>
        </div>
    </div>
</div>
