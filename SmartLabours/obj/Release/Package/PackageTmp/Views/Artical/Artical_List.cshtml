  function checkAll(thisobj) {
       
        var chk = document.getElementsByName("chkname");
        for (var i = 0; i < chk.length; i++) {
            if (chk[i].type == 'checkbox') {
                if (thisobj.checked) {
                    chk[i].checked = true;
                }
                else {
                    chk[i].checked = false;
                }
            }
        }
    }
  
