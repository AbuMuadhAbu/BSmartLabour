        var url = "/Service/UpdateStatus";

        var img = $(anchor).find("img")[0];

        $.get(
          url,
           { status: img.alt, bannerid: bannerid },
           function (data) {
               if (data == "sucess") {

                   if (img.alt == "true") {
                       img.src = "../../content/admin/images/icons/x_icon.gif";
                       img.alt = "false";
                   }
                   else {
