@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content">
    <div class="wrapper">
        <div class="continn">
            <ul class="breadcrumbs-list clearfix">
             @*<li><a href="javascript:voi(0);">Others</a></li>*@
                <li><a href="/Smart/Dashboard">Dashboard</a></li>
                <li>Smart Labour Dashboard</li>
            </ul>
            <fieldset>
                <legend></legend>
                <h3>
                    Smart Labour Dashbord
                </h3>
                <div class="clr2">
                </div>
                @{
                    SmartLabours.Models.SmartLabourEntities dbEntites = new SmartLabours.Models.SmartLabourEntities();

                    List<SmartLabours.Models.DonatePhone> lstofDonatephone = new List<SmartLabours.Models.DonatePhone>();

                    List<SmartLabours.Models.Labour> lstoflabour = new List<SmartLabours.Models.Labour>();

                    List<SmartLabours.Models.Sponsor> lstofsponsor = new List<SmartLabours.Models.Sponsor>();

                    List<SmartLabours.Models.TBL_COMMENTS_SMT> lstofArticalComments = new List<SmartLabours.Models.TBL_COMMENTS_SMT>();

                    List<SmartLabours.Models.TBL_TESTIMONIAL_SMT> lstoftestimonial = new List<SmartLabours.Models.TBL_TESTIMONIAL_SMT>();

                    List<SmartLabours.Models.RequestPhone> lstofRequestphone = new List<SmartLabours.Models.RequestPhone>();
                    
                }
                <ul class="dashboard-list clearfix">
                    <li><span>Donate Form Request (Awaiting Approval ) </span>
                        @{
                            Int64 Donateformcount = dbEntites.DonatePhone.Where(n => n.IsPhoneConfirmation == false && n.CourierDetail == null).ToList().Count();
                        }
                        <label>
                            Count - </label>
                        <label>@Donateformcount</label>
                    </li>
                    <li><span>Articles (Awaiting Approval For Comments ) </span>
                        @{
                            Int64 ArticalCommentscount = dbEntites.Comments.Where(n => n.APPROVED == false).ToList().Count();
                        }
                        <label>
                            Count - </label><label>@ArticalCommentscount</label>
                    </li>
                    <li><span>Testimonials (Awaiting Approval For Post) </span>
                        @{
                            Int64 Testimonialcount = dbEntites.Testimonial.Where(n => n.Homecontent == false).ToList().Count();
                        }
                        <label>Count - </label>
                        <label>@Testimonialcount</label>
                    </li>
                    <li><span>Labour User</span> @*     Labours count*@
                        @{
                            Int64 Labourusercount = dbEntites.Labours.Where(n => n.STATUS == true).ToList().Count();
                        }
                        <label>
                            Total Count -
                        </label>
                        <label>@Labourusercount</label></br>
                        @{
                            Int64 Labouroneweakcount = dbEntites.Labours.Where(n => n.STATUS == true).ToList().Count();
                        }
                        <label>
                            Latest registration Count -
                        </label>
                        <label>@ViewBag.lastweakcount</label>
                        <br />
                        <a href="/Smartusers/Labour_List" target="_blank">Labour List</a>
                    </li>
                    <li><span>Sponsor User</span> @*     Sponsor user count*@
                        @{
                            Int64 Sponsorusercount = dbEntites.Sponsor.Where(n => n.Status == true).ToList().Count();
                        }
                        <label>
                            Total Count -
                        </label>
                        <label>@Sponsorusercount</label></br>
                        @{
                            Int64 sponsoroneweakcount = dbEntites.Labours.Where(n => n.STATUS == true).ToList().Count();
                        }
                        <label>
                            Latest registration Count -
                        </label>
                        <label>@ViewBag.lastweaksponsorcount</label>

                        <br />
                        <a href="/Smartusers/Sponsor_List" target="_blank">Sponsor List</a>
                    </li>
                    <li><span>Sponsor Request (Donate Phone)</span>
                        @{
                            Int64 SponsorRequestcount = dbEntites.DonatePhone.Where(n => n.IsPhoneConfirmation == true && n.CourierDetail != null && n.IsPhoneAcceptedByAdmin == false).ToList().Count();
                        }
                        <label>Count - </label>
                        <label>@SponsorRequestcount</label>
                    </li>
                    <li><span>Labour User (Accept Phone Notification) </span>
                        @{
                            Int64 LabourRequestcount = dbEntites.phoneAssigntolabour.Where(n => n.IsPhoneAccepted == true && n.CourierDetail == null && n.IsLabourReceivedPhone == false).ToList().Count();
                        }
                        <label>Count - </label>
                        <label>@LabourRequestcount</label>
                    </li>
                    <li><span>Credit Points earned by Labour </span>
                        <label>
                            Total Count -
                        </label>
                        <label>
                            0</label></br>
                        <label>
                            Points yet to be redeemed -
                        </label>
                        <label>
                            0</label>
                    </li>
                    <li><span>Talk Time Vouchers earned </span>
                        <label>
                            Total Count
                        </label>
                        -
                        <label>
                            0</label>
                            <br />
                        <label>
                            Latest Earned Count -</label><label>
                                0
                            </label>
                    </li>
                </ul>
            </fieldset>
        </div>
    </div>
</div>
