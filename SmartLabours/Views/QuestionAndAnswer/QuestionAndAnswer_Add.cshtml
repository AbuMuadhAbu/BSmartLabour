        }
        var allowedFiles = [".mp4"];
        var fileUpload = $(id).val();
        var regex = new RegExp("([a-zA-Z0-9\s_\\.\-:])+(" + allowedFiles.join('|') + ")$");
        if (!regex.test(fileUpload)) {
            alert("Please Upload mp4 file formats only");
            $(id).parent().find('input:eq(1)').val('');
            return false;
        }        
        return true;

    }
    
