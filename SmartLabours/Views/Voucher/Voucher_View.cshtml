@model SmartLabours.Models.TBL_VOUCHER_SMT
@{
    ViewBag.Title = "Voucher View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript">
        function PreviousPage() {

            window.location = "/Voucher/VoucherRecords_List";
        }

    </script>
</head>
<body>
    @* Google Analytics COde  *@
    <noscript><iframe src="//www.googletagmanager.com/ns.html?id=GTM-PTWMKL" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <script>(function (w, d, s, l, i) { w[l] = w[l] || []; w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' }); var f = d.getElementsByTagName(s)[0], j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src = '//www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f); })(window, document, 'script', 'dataLayer', 'GTM-PTWMKL');</script>
    <!-- End here -->
    <div class="content">
        <div class="wrapper">
            <div class="continn">
                <fieldset>
                    <legend></legend>
                    <h3>
                        Voucher View
                    </h3>
                    <div class="clr2">
                    </div>
                    <div class="fld_fd view-blk">
                        <dl>
                            <dd>
                                Service Provider</dd>
                            <dt>
                                @Html.DisplayFor(n => n.serviceplan.serviceprovider.SERVICEPROVIDER)</dt>
                        </dl>
                        <dl>
                            <dd>Service Type</dd><dt>
                            @{
                                Int32 id =  Model.serviceplan.SERVICETYPEID;

                                SmartLabours.Models.SmartLabourEntities dbentites = new SmartLabours.Models.SmartLabourEntities();

                                SmartLabours.Models.TBL_SERVICETYPE_SMT objservicetype = new SmartLabours.Models.TBL_SERVICETYPE_SMT();

                                string Typename = dbentites.ServiceType.SingleOrDefault(n => n.SERVICETYPEID == id).SERVICETYPENAME;
                            }
                            <label>@Typename</label>
                            </dt>
                        </dl>
                       
                            <dl>
                                <dd>
                                    Service Plan</dd>
                                <dt>
                                    @Html.DisplayFor(n => n.serviceplan.PLANNAEME)</dt>
                            </dl>
                            <dl>
                                <dd>
                                    Voucher Code</dd>
                                <dt>
                                    @Html.DisplayFor(n => n.CODES)</dt>
                            </dl>


                            <dl>
                                <dd>
                                    Organization
                                </dd>
                                <dt>
                                    @Html.DisplayFor(n => n.serviceprovider.Organizations.OrganisationName)
                                   
                                </dt>
                            </dl>
                        <dl>
                            <dd>
                                Emirates ID
                            </dd>
                            <dt>
                                @Html.DisplayFor(n => n.LabourId)
                            </dt>
                        </dl>


             @{if (Model.VoucherImage != null && Model.VoucherImage != "")
               {
                        <dl>
                            <dd>
                                Voucher Image
                            </dd>
                            <dt>

                                <img src="~/Uplodify/VoucherImages/@Model.VoucherImage" height="100px" width="100px" />
                                </dt>
                        </dl>
            }
            }
                        
                            <dl>
                            <dd>Voucher status</dd>
                             <dt>
                                    @{if (Model.IsVoucherAssigned == true)
                                      {<label>Voucher Used</label>}
                                      else
                                      {<label>Voucher Not Used</label>}}
                                </dt>
                            </dl>


                            <dl>
                                <dd>
                                    Status
                                </dd>
                                <dt>
                                    @{if (Model.STATUS == true)
                                    {<label>Active</label>}
                                    else
                                    {<label>In Active</label>}}
                                </dt>
                            </dl>

                            <div class="btn1 btn1-form">
                                <input type="button" value="Back" title="Back" onclick="PreviousPage();" />
                            </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</body>
</html>
